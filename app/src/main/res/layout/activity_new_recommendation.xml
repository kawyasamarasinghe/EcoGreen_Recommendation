<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="@color/White"
        android:background="@color/appGreen"  />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Recommendations for New User"
        android:textSize="22dp"
        android:padding="16dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/plasticTypeSpinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

    <Spinner
        android:id="@+id/itemLocationSpinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

    <Spinner
        android:id="@+id/industrySpinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

    <Button
        android:id="@+id/getRecommendationsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Get Recommendations"
        android:backgroundTint="@color/appGreen"
        app:cornerRadius="12dp" />

    <ListView
        android:id="@+id/recommendationsListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"/>
</LinearLayout>

