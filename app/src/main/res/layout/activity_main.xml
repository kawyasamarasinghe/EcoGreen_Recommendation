<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="@color/White"
        android:background="@color/appGreen"  />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Eco-Green Recommendations"
        android:textSize="22dp"
        android:padding="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/getRecExistingUserButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Get Recommendations for Existing Users"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/appbtn"
        app:cornerRadius="12dp" />

    <Button
        android:id="@+id/getRecNewUserButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Get Recommendations for New Users"
        android:backgroundTint="@color/appbtn"
        android:layout_marginTop="10dp"
        app:cornerRadius="12dp" />
</LinearLayout>
